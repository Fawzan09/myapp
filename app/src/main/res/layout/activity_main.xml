<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo/Icon -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_ai_logo"
            android:contentDescription="Phi-1 AI Logo" />

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phi-1 AI Assistant"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Private, Local AI Companion"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:alpha="0.8"
            android:layout_marginBottom="48dp"
            android:gravity="center" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Initializing AI model..."
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Start Chat Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startChatButton"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="Start Conversation"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            app:icon="@drawable/ic_chat"
            app:iconGravity="textStart" />

        <!-- Settings Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsButton"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:text="Settings"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="24dp"
            app:strokeColor="@android:color/white"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_settings"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart" />

    </LinearLayout>

    <!-- Security Badge -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorSecondary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_security"
                android:layout_marginEnd="8dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100% Private â€¢ On-Device AI"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
